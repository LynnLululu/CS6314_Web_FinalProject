    <!-- breadcrumb -->
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-light">
        <li class="breadcrumb-item"><a href="/" class="text-dark">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Product</li>
      </ol>
    </nav>

    <!-- Product Info -->
    <div class="row">
      <div class="col-12 col-lg-6 col-sm-12 mb-5 rounded">
        <div class="bg-light rounded px-3 py-3 h-100">
          <img class="w-100 h-100" src="/images/<%= product.image %>" alt="<%= product.productName %> Picture">
        </div>
      </div>
      <div class="col-12 col-lg-6 col-sm-12 mb-5 rounded bg-light">
        <div class="p-5">
          <h1><%= product.productName %></h1>
          <p><%= product.description %></p>
          <% categories.forEach(function(category){ %>
            <a href="#" class="badge badge-secondary float-right mr-1 mb-1"><%= category.categoryName %></a>
          <% }); %>
          <br>
          <h4 class="mt-3 mb-2 float-right mr-1 pt-2">$<%= product.productPrice %></h4>
          <div class="dropdown my-3 pt-2">
            <button class="btn btn-outline-secondary dropdown-toggle px-4" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              &nbsp;&nbsp;&nbsp;1&nbsp;&nbsp;&nbsp;
            </button>
            <div class="dropdown-menu overflow-auto" style="max-height: 140px;" aria-labelledby="dropdownMenuButton">
              <% for (var i = 1; i <= product.num; i++) {%>
                <a class="dropdown-item" href="#"> <%= i %></a>
              <% } %>
            </div>
          </div>
          <a href="#" class="btn btn-warning float-left mb-5 px-4"><i class="fas fa-shopping-cart mr-2"></i>Add</a>
          <h3 class="float-right"><i class="far fa-heart mr-31 pr-1 text-danger"></i></h3>
        </div>
      </div>
    </div>