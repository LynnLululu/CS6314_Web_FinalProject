<div class="row userinfo">
    <div class="col-md-9 offset-md-1">
        <h2 class="text-warning my-4">
            Add New Product
        </h2>
        <div>
            <form>
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <input class="form-control" id="productName" aria-describedby="emailHelp">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description">
                </div>

                <div class="form-group">
                    <label for="productPrice">Product Price</label>
                    <input class="form-control" id="productPrice">
                </div>

                <div class="form-group">
                    <label for="storeNum">Store Number</label>
                    <input class="form-control" id="storeNum">
                </div>

                <div class="form-group">
                    <label for="categories">Categories</label>
                    <input class="form-control" id="categories">
                    <small id="emailHelp" class="form-text text-muted">Please seperate by comma, eg. category1,
                        category2 ...</small>
                </div>

                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="form-control-file" id="image" accept=".jpg,.jpeg,.bmp,.png,.gif">
                </div>

                <button type="submit" class="btn btn-warning px-5 my-5">Save</button>
            </form>
        </div>
    </div>
</div>
<!-- /.row -->