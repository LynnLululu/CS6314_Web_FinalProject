<!-- title -->
<h2 class="text-center mb-3 pt-5 pb-3">Shopping Cart</h2>

<!-- Shop list -->
<div id="shopList" class="row text-center">
    <div class="col col-lg-8 col-md-6">
        <% cart.forEach(function(product){ %>
        <div class="row mr-0 w-100 mb-3">
            <div class="col-12 col-lg-6 col-sm-12 bg-light">
                <div class="rounded py-3 h-100">
                    <img class="w-100 h-100" src="/images/<%= product.image %>"
                        alt="<%= product.productName %> Picture">
                </div>
            </div>
            <div class="col-12 col-lg-6 col-sm-12 bg-light">
                <div class="p-5">
                    <h4 class="text-left"><%= product.productName %>
                        <a class="btn float-right">
                            <i class="fas fa-trash-alt text-secondary"></i>
                        </a>
                    </h4>
                    <p class="text-left"><%= product.description %></p>
                    <% categories.forEach(function(category){ %>
                    <a href="#" class="badge badge-secondary float-right mr-1 mb-1"><%= category.categoryName %></a>
                    <% }); %>
                    <br>
                    <h4 class="mt-3 mb-2 float-right mr-1 pt-2">$<%= product.price %></h4>
                    <div class="dropdown my-3 pt-2 float-left">
                        <button class="btn btn-outline-secondary dropdown-toggle px-4" type="button"
                            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            &nbsp;&nbsp;&nbsp;1&nbsp;&nbsp;&nbsp;
                        </button>
                        <div class="dropdown-menu overflow-auto" style="max-height: 140px;"
                            aria-labelledby="dropdownMenuButton">
                            <% for (var i = 1; i <= product.storeNum; i++) {%>
                            <a class="dropdown-item" href="#"> <%= i %></a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <!-- Order Summary -->
    <div class="col col-lg-4 col-md-6">
        <div class="bg-light p-5"style="border-left: 1px; border-right: 1px;">
        <h4 class="mb-4">Order Summary</h4>
        <hr>
        <!-- Subtotal -->
        <div class="row">
            <div class="col-6">
                <h6 class="text-left">Subtotal</h6 class="text-left">
            </div>
            <div class="col-6">
                <p class="text-right">$100</p>
            </div>
        </div>

        <!-- Shipping -->
        <div class="row">
            <div class="col-6">
                <h6 class="text-left">Shipping</h6 class="text-left">
            </div>
            <div class="col-6">
                <p class="text-right">Free</p>
            </div>
        </div>

        <!-- Tax -->
        <div class="row">
            <div class="col-6">
                <h6 class="text-left">Tax</h6 class="text-left">
            </div>
            <div class="col-6">
                <p class="text-right">$8.25</p>
            </div>
        </div>
        <hr>
        <!-- Total -->
        <div class="row">
            <div class="col-6">
                <h5 class="text-left">Total</h5>
            </div>
            <div class="col-6">
                <h5 class="text-right">$108.25</h5>
            </div>
        </div>

        <button class="btn btn-secondary my-4 mt-5 w-100 large"><h5 class="my-1">Check Out</h5></button>

    </div>
    <!-- /.col summary -->


    </div>
</div>
<!-- /.row -->