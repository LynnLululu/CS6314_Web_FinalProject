<!-- title -->
<h2 class="text-center mb-3 pt-5 pb-3">Your Favorites</h2>

<!-- Product list -->
<div id="productList" class="row text-center">

  <% products.forEach(function(product){ %>
  <div class="col-lg-3 col-md-6 mb-4" style="display: none;">
    <!-- card -->
    <div class="card h-100 pb-0">

      <!-- product image -->
      <a href="products/<%= product.productID %>" class="card-link text-dark">
        <img class="card-img-top" src="images/<%= product.image %>" alt="<%= product.productName %>">
      </a>

      <div class="card-body text-left">

        <!-- product link -->
        <a href="products/<%= product.productID %>" class="card-link text-dark">

          <!-- product name -->
          <h5 class="card-title text-truncate"><%= product.productName %></h5>

          <!-- description -->
          <p class="card-text truncate"><%= product.description %></p>

          <!-- price -->
          <p class="card-text text-right font-weight-bold float-right mb-0"> $<%= product.productPrice %></p>
        </a>

        <!-- delete button -->
        <a class="btn p-0">
          <p class="float-left mb-0"><i class="fas fa-trash-alt text-secondary"></i></p>
        </a>
      </div>

      <div class="card-footer">
        <div class="row">
          <div class="col col-lg-6">
            <!-- select number -->
            <div class="dropdown h-100">
              <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" id="dropdownMenuButton"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                &nbsp;&nbsp;&nbsp;1&nbsp;&nbsp;
              </button>
              <div class="dropdown-menu overflow-auto" style="max-height: 140px;" aria-labelledby="dropdownMenuButton">
                <% for (var i = 1; i <= product.num; i++) {%>
                <a class="dropdown-item"><%= i %></a>
                <% } %>
              </div>
            </div>
          </div>
          <div class="col col-lg-6">
            <!-- shop button -->
            <a href="#" class="btn btn-warning w-100"><i class="fas fa-shopping-cart mr-2"></i>Add</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }); %>

</div>
<!-- /.row -->

<!-- Pagination -->
<nav aria-label="Page navigation example text-secondary">
  <ul id="page" class="pagination justify-content-center w-100">
    <li id="pagePrev" class="page-item ml-0 mr-auto disabled">
      <a class="page-link" aria-label="Previous">
        <span aria-hidden="true">
          <i class="fas fa-chevron-left mr-3"></i>
          Prev
        </span>
      </a>
    </li>
    <li id="page1" class="page page-item active"><a class="page-link">1</a></li>

    <li id="pageNext" class="page-item ml-auto mr-0">
      <a class="page-link" aria-label="Next">
        <span aria-hidden="true">
          Next
          <i class="fas fa-chevron-right ml-3"></i>
        </span>
      </a>
    </li>
  </ul>
</nav>